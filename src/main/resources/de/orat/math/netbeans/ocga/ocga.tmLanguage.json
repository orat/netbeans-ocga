{
	"name": "ocga",
        "scopeName": "text.ocga",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#symbols"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
                {
                    "name": "comment.block.ocga",
                    "begin": "/\\*",
                    "end": "\\*/"
                },
                {
                    "begin": "(^\\s+)?(?=//)",
                    "end": "(?=$)",
                    "patterns": [
                        {
                            "name": "comment.line.double-slash.ocga",
                            "begin": "(?<!/)//(?:(?!/)|(?=//))",
                            "end": "(?=$)"
                        }
                    ]
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.base-secondary.ocga",
					"match": "∧|\\+|-|⌋|⌊|∨|/"
				},
				{
					"name": "keyword.operator.add-secondary.ocga",
					"match": "⋅|∩|∪"
				},
				{
					"name": "keyword.operator.base-primary.ocga",
					"match": "(?<!\\s)(⁻¹|\\*|†|˜)"
				},
				{
					"name": "keyword.operator.add-primary.ocga",
					"match": "(?<!\\s)(⁻\\*|²|\\^)"
				},
				{
                    "name": "keyword.operator.assignment.ocga",
                    "match": ":="
                }
			]
		},
		"functions": {
			"begin": "((up|down|exp|log|normalize|norm|abs|sqrt|atan2|negate14|tan|sin|sinh|cos|cosh|atan|asin|acos|sign)|(translator|rotator))\\(",
			"beginCaptures": {
				"2": {
					"name": "entity.name.function.base.ocga"
				},
				"3": {
					"name": "entity.name.function.additional.ocga"
				}
			},
			"end": "\\)",
			"patterns": [
				{
					"include": "#operators"
				},
				{
					"include": "#symbols"
				}
			]
		},
		"variables": {
			"match": "(^\\w+?)(?=\\s*?:=)",
			"captures": {
				"1": {
					"name": "variable.parameter.ocga"
				}
			}
		},
		"symbols": {
			"patterns": [
				{
					"name": "constant.language.base-vector.ocga",
					"match": "ε(₀|ᵢ|₁|₂|₃)"
				},
				{
					"name": "constant.numeric.ocga",
					"match": "π|∞"
				},
				{
					"name": "constant.language.add-vector.ocga",
					"match": "(?<!\\w)(o|n|E)(?!\\w)|ñ|E(₀|₃)"
				}
			]
		}
	}
}
